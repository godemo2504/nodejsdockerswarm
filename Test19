- name: Installation Proxmox VE (Lab OpenStack)
  hosts: proxmox
  become: true

  tasks:

  - name: Installer dépendances
    apt:
      name:
        - wget
        - gnupg
        - apt-transport-https
        - ca-certificates
      state: present
      update_cache: yes

  - name: Télécharger clé Proxmox (HTTP pour éviter TLS intercept)
    get_url:
      url: http://download.proxmox.com/debian/proxmox-release-bookworm.gpg
      dest: /usr/share/keyrings/proxmox-archive-keyring.gpg
      mode: '0644'

  - name: Ajouter repo Proxmox no-subscription
    copy:
      dest: /etc/apt/sources.list.d/pve-install-repo.sources
      content: |
        Types: deb
        URIs: http://download.proxmox.com/debian/pve
        Suites: bookworm
        Components: pve-no-subscription
        Signed-By: /usr/share/keyrings/proxmox-archive-keyring.gpg

  - name: Update apt
    apt:
      update_cache: yes

  - name: Installer kernel Proxmox
    apt:
      name: proxmox-default-kernel
      state: present

  - name: Reboot si kernel non PVE
    reboot:
    when: ansible_facts['kernel'] is not match(".*-pve")

  - name: Recollecter facts après reboot
    setup:

  - name: Installer Proxmox VE
    apt:
      name:
        - proxmox-ve
        - postfix
        - open-iscsi
        - chrony
      state: present

  - name: Supprimer repo enterprise si présent
    file:
      path: /etc/apt/sources.list.d/pve-enterprise.list
      state: absent
